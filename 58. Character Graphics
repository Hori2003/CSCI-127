#include <iostream>
using namespace std;

int main ()
{
  int number;
  char character;
  cout << "Please enter a number: ";
  cout << "Please enter a character: ";
  cin >> number;
  cin >> character; 
  for (int i =0; i < number; i++)
  {
    for (int j=0; j<=i;j++)
    {
      cout << character;
    }
    cout <<endl;
  }
  for (int i =0; i < number; i++)
  {
    for (int j=0; j < number ;j++)
    {
      cout << character;
    }
    cout <<endl;
  }
  return 0;
}
