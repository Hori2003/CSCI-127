#include <iostream>
using namespace std;

int main()
{
  float num;
  float coffee;
  cout << "Enter your monthly budget for food and coffee: ";
  cout << "How much are you spending in a week for coffee: ";
  cin >> num;
  cin >> coffee;
  for (int i = 0; i < 4; i++)
  {
    num = num - coffee;
    cout << "Budget left after week " << i+1 << num <<endl;
  }
}
