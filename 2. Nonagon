import turtle
wn = turtle.Screen()             # Set up the window and its attributes
wn.bgcolor("khaki")


tess = turtle.Turtle()           # create tess and set some attributes
tess.color("darkblue")
tess.pensize(5)

alex = turtle.Turtle()
alex.color("violet")
alex.pensize(5)
tess.forward(100)                 # make alex draw a square
tess.left(90)
tess.forward(100)
tess.left(90)
tess.forward(100)
tess.left(90)
tess.forward(100)
tess.left(90)


alex.left(90)                  # turn tess around
alex.forward(100)                 # move her away from the origin

alex.right(90)
alex.forward(100)                 # Let tess draw an equilateral triangle
alex.left(120)
alex.forward(100)
alex.left(120)
alex.forward(100)
              # complete the triangle


wn.exitonclick()
